{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "outDir": "./dist",                
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "lib",
        "node_modules",
        "**/*.test.*",
        "**/*-test.*",
        "**/*_test.*",
        "**/__test__/*"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}